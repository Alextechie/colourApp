generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String
  country   String
  password  String
  createdAt DateTime
}

model Edit {
  id             Int      @id @default(autoincrement())
  name           String
  primaryColor   String
  secondaryColor String
  tertiaryColor  String
  role           Role
  email          String
  updatedAt      DateTime
}

model Country {
  id     Int    @id @default(autoincrement())
  name   CountryName
  colour Colours[]
}

model Colours {
  id      Int    @id @default(autoincrement())
  hexcode String
  color   String
  countryid Int
  colour Country @relation(fields: [countryid], references: [id])
}

enum Role {
  Admin
  Student
}

enum CountryName {
  KENYA
  TANZANIA
  UGANDA
  RWANDA
  SOUTHAFRICA
  BURUDI
}
